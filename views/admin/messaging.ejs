<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JupiReads | Messaging</title>
    <link rel="stylesheet" href="/styles/addForm.css">
    <%- include('../partials/fonts') %>
</head>
<body>
    
    <%- include('../partials/adminNavbar') %>

    <%- include('../partials/adminSidebar') %>

    <div class="messages">
        <h2>User Messages</h2>
        <% messages.forEach(message => { %>
            <div class="message">
                <h3><%= message.subject %></h3>
                <p><strong>Name:</strong> <%= message.name %></p>
                <p><strong>Phone Number:</strong> <%= message.phoneNumber %></p>    
                <p class="content-short"><strong>Message:</strong> <%= message.message.substring(0, 100) %>...</p>
                <p class="content"><strong>Message:</strong> <%= message.message %></p>
                <span class="read-more">Read More</span>
                <form action="/admin/messages/<%= message._id %>/delete" method="POST" style="display:inline;">
                <button class="button1" type="submit">Delete</button>
                </form>
                <p><small><%= message.date.toDateString() %></small></p>
            </div>
        <% }) %>
    </div>


    <%- include('../partials/footerA') %>

</body>
<style>
    .messages {
    max-width: 800px;
    margin: 100px auto 50px auto; 
    padding: 20px;
    background: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .messages h2 {
    margin-bottom: 20px;
    }

    .message {
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
    margin-bottom: 10px;
    }
    .messages ul {
        list-style-type: none;
        padding: 0;
    }
    .messages li {
        background: #f9f9f9;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
    }
    .messages li p {
        margin: 5px 0;
    }
    .message .content {
            display: none;
            margin:5px ;
            margin-bottom: 5px;
     }

    .message .read-more {
            color: #FECC02;
            cursor: pointer;
    }
    

.button1 {
  background-color: #FECC02;
  border: 1px solid transparent;
  border-radius: 3px;
  box-shadow: rgba(255, 255, 255, .4) 0 1px 0 0 inset;
  box-sizing: border-box;
  color: #fff;
  cursor: pointer;
  display: inline-block;
  font-family: -apple-system,system-ui,"Segoe UI","Liberation Sans",sans-serif;
  font-size: 13px;
  font-weight: 400;
  line-height: 1.15385;
  margin: 0;
  margin-left: 700px;
  outline: none;
  padding: 8px .8em;
  position: relative;
  text-align: center;
  text-decoration: none;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
  vertical-align: baseline;
  white-space: nowrap;
}

.button1:hover,
.button1:focus {
  background-color: #FECC02;
}

.button1:focus {
  box-shadow: 0 0 0 4px rgba(0, 149, 255, .15);
}

.button1:active {
  background-color: #e0b818;
  box-shadow: none;
}
</style>
<script>
    document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', () => {
            const content = button.previousElementSibling;
            const shortContent = button.previousElementSibling.previousElementSibling;
            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
                shortContent.style.display = 'none';
                button.textContent = 'Read Less';
            } else {
                content.style.display = 'none';
                shortContent.style.display = 'block';
                button.textContent = 'Read More';
            }
        });
    });
</script>
</html>
